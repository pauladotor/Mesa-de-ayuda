# Configuración de Apache para Mesa de Ayuda

# Habilitar el motor de reescritura
RewriteEngine On

# Establecer el índice por defecto
DirectoryIndex index.php index.html

# Permitir acceso a todos los archivos
<FilesMatch "\.(php|html|css|js|png|jpg|jpeg|gif|ico|svg)$">
    Require all granted
</FilesMatch>

# Configuración de PHP
<IfModule mod_php.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log /var/log/apache2/php_errors.log
</IfModule>

# Proteger archivos sensibles
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Prevenir acceso a archivos de configuración
<FilesMatch "\.(env|ini|log|sh|sql)$">
    Require all denied
</FilesMatch>

# Permitir acceso a la carpeta database solo para archivos SQL necesarios
<Directory "database">
    Require all denied
</Directory>

# Habilitar compresión
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Configurar caché para recursos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
